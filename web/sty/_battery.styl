
.battery
  background white1
  width 40px
  height 14px
  transition all 5s

.battery:before 
  content ""
  background transparent
  border 2px solid white1
  margin -3px
  width 42px
  height 16px
  position absolute
  border-radius 2px

.battery:after 
  content ""
  background transparent
  border 2px solid white1
  margin 0 41px
  width 4px
  height 10px
  position absolute
  border-radius 2px

