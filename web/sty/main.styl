
@import 'nib'
@import _vars
@import _fonts

.clear
  clearfix()

body,html
  padding 0
  margin 0
  font-family 'Droid Sans',tahoma,verdana,arial,sans-serif
  font-size 14px
  color black1

.header
  padding 5px 20px
  background-color blue1
  color white1
  .logo
    float left
    font-size 2.5em
    font-weight bold

  .login
    float right
    color white1
    margin 5px 0 0 0
  .hbutton
    cursor pointer
    border 2px solid blue3
    border-radius 5px
    background-color blue2
    padding 5px 12px
    a
      color white1
      text-decoration none
  .profile
    float right
    .name
      float left
      margin 10px 0 0 0
      font-size 1.3em
      padding 0 5px
    .picture
      float right
      width 40px
      height 40px
      overflow hidden
      border 2px solid white1
      border-radius 50%
      img
        width inherit
        height inherit
    .tools
      float right
      margin 0 0 0 -10px
      .logout
        text-align center
        margin 6px 0 0 0
       
.container
  font-size 1em
  text-align center
  background-color white2
  padding 100px


.footer
  text-align right
  padding 10px 20px
