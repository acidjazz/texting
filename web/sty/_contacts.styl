
.contacts

  ::-webkit-scrollbar
    width 7px
    border-radius 5px
  ::-webkit-scrollbar-track
    background-color blue1
    box-shadow inset 1px 1px 5px rgba(0, 0, 0, 0.5)
  ::-webkit-scrollbar-thumb
    background linear-gradient(left, #fecf23, #fd9215)
    border-radius 2px

  float left
  width 200px
  transition width 0.2s
  position relative
  &.loading
    background-color white3
  .body
    position relative
    height 500px
    overflow hidden
  &.scrollable .body
    overflow-y auto
    &.loading .contact
      .picture
        margin 0 125px 0 0
      .name
        opacity 0

  .search
    background-color white1
    transition all 0.2s
    font-size 1.2em
    padding 2px 5px
    overflow hidden
    box-shadow inset 0px 0px 3px 0px rgba(0, 0, 0, 0.8)
    .icon
      float left
    input
      display block
      outline none
      float left
      width 135px
      border none
      background-color inherit
      font-family inherit
      font-size inherit
      &::-webkit-input-placeholder
        color black2
      &::-moz-placeholder
        color black2
    &.on
      height 30px
      opacity 1
    .close
      float right
      margin 4px 0 0 0
      cursor pointer
      color white1
      transition color 0.2s
      &.on
        color black1
        transition color 0.2s

