
.contacts

  ::-webkit-scrollbar
    width 7px
    border-radius 5px
  ::-webkit-scrollbar-track
    background-color dark5
    box-shadow inset 1px 1px 5px rgba(0, 0, 0, 0.5)
  ::-webkit-scrollbar-thumb
    background linear-gradient(left, orange1, orange2)
    border-radius 2px

  float left
  width 200px
  transition width 0.2s
  position relative
  color dark3
  background-color dark1
  &.loading
    background-color white3
  .body
    position relative
    height 500px
    overflow hidden
  &.scrollable .body
    overflow-y auto
    &.loading .contact
      .picture
        margin 0 125px 0 0
      .name
        opacity 0
    .none
      cursor pointer
      display none
      padding 20px 0
      text-align center
      font-style italic

  .search
    border-top 2px solid dark4
    border-bottom 1px solid dark4
    transition all 0.2s
    font-size 1.2em
    padding 5px
    overflow hidden
    background-color dark1
    height 25px
    .icon
      float left
    input
      display block
      outline none
      float left
      width 110px
      border none
      color white1
      margin 1px 0 0 0
      background-color inherit
      font-family inherit
      font-size inherit
      &::-webkit-input-placeholder
        color dark5
      &::-moz-placeholder
        color dark5
    &.on
      height 30px
      opacity 1
    .close, .minimize
      float right
      margin 3px 0 0 0
      cursor pointer
      color dark1
      transition color 0.2s
      &.on, &.minimize
        color dark3
        transition color 0.2s
        &:hover
          buttonhover()

