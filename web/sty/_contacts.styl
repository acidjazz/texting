
.contacts

  ::-webkit-scrollbar
    width 7px
    border-radius 5px
  ::-webkit-scrollbar-track
    background-color blue1
    box-shadow inset 1px 1px 5px rgba(0, 0, 0, 0.5)
  ::-webkit-scrollbar-thumb
    background linear-gradient(left, #fecf23, #fd9215)
    border-radius 2px

  float left
  width 200px
  height 500px
  transition width 0.2s
  &.loading
    background-color white3
  .body
    position relative
    height 100%
    overflow hidden
  &.scrollable .body
    overflow-y auto
    direction rtl
    &.loading .contact
      .picture
        margin 0 125px 0 0
      .name
        opacity 0


.resizer
  cursor ew-resize
  position relative
  float right
  width 5px
  height 500px
  background-color white3
  border-left 2px solid white4
  border-right 2px solid white4
  .handle
    position absolute
    top 50%
    width 5px
    height 20px
    padding 10px 0
    margin-top -20px
    cursor pointer
    &:hover
      background-color rgba(0, 0, 255, 0.2)
    .dot
      font-size 2em
      line-height 0.25em
      color black2
      margin 0 0 0 -2px

.ghost
  z-index 10
  position absolute
  top 0px
  left 0px
  width 7px
  height 100%

.ghost:hover 
  background-color rgba(0, 255, 0, 0.5)

.ghost:active
  background-color rgba(255, 155, 0, 0.8)

.contact
  opacity 1
  cursor pointer
  border-bottom 1px solid white4
  padding 2px
  font-size 1.2em
  .name
    text-align left
    white-space nowrap
    text-overflow ellipsis
    overflow hidden
    transition opacity 0.2s
    transition-delay 0.2s
    color black1
    line-height 40px
    padding 0 0 0 5px
    opacity 1

  .picture
    float right
    transition margin 0.2s 
    width size = 40px
    height size
    img
      width size
    border-radius 50%
    overflow hidden
  &:hover
    background-color blue1
  &:hover .name
    color white1
  &:hover .default .bottom, &:hover .default .top
    background-color white1
    .name
      color white1
  .default
    overflow hidden
    .top
      width 25px
      height 25px
      background-color blue1
      border-radius 50%
      margin 5px auto 0
    .bottom
      width 40px
      height 10px
      background-color blue1
      border-radius 50% 50% 0 0
      margin auto
