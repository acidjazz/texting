.resizer
  cursor ew-resize
  position relative
  float right
  width 5px
  height 500px
  background-color white3
  border-left 2px solid white4
  border-right 2px solid white4
  .handle
    position absolute
    top 50%
    width 5px
    height 20px
    padding 10px 0
    margin-top -20px
    cursor pointer
    &:hover
      background-color rgba(0, 0, 255, 0.2)
    .dot
      font-size 2em
      line-height 0.25em
      color black2
      margin 0 0 0 -2px

.ghost
  z-index 10
  position absolute
  top 0px
  left 0px
  width 7px
  height 100%

.ghost:hover 
  background-color rgba(0, 255, 0, 0.5)

.ghost:active
  background-color rgba(255, 155, 0, 0.8)

.contact
  transition all 0.2s
  cursor pointer
  border-bottom 1px solid white4
  padding 2px
  font-size 1.2em
  .name
    text-align left
    white-space nowrap
    text-overflow ellipsis
    overflow hidden
    transition opacity 0.2s
    transition-delay 0.2s
    color black1
    line-height 40px
    padding 0 0 0 5px
    opacity 1
    span
      background-color orange1
  .picture
    float right
    border 2px solid blue1
    transition margin 0.2s 
    width size = 40px
    height size
    img
      width size
    border-radius 50%
    overflow hidden
    div
      font-size 2em
      color blue1
      margin 0 0 0 -3px
  &:hover
    background-color blue1
  &:hover .name, &:hover .icon-user
    color white1
  &:hover .picture
    border 2px solid white1

