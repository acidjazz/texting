
.boxes

  ::-webkit-scrollbar
    width 5px
  ::-webkit-scrollbar-track
    background-color dark1
    box-shadow inset 1px 1px 5px rgba(0, 0, 0, 0.5)
  ::-webkit-scrollbar-thumb
    border-radius 2px
    background linear-gradient(left, orange1, orange2)

  overflow auto
  margin 0 0 0 200px
  border-top 2px solid dark4
  padding 2px 2px 0 2px
  position relative
  background-color white1
  &.loading
    background-color white3

  > .box
    margin 5px
    width 250px
    float left
    background-color white2
    overflow hidden
    transition all 1.8s
    border-radius 3px
    box-sizing border-box
    border 1px solid lightborder2
    border-bottom-width 2px
    border-top-width 0
    &.maximize
      width 99%
      input
        width 95% !important
    &.glow
      box-shadow 0 0 5px 1px rgba(black1, 1)
      transition box-shadow 0.2s
    &.closing1, &.closing2
      opacity 0
      transition all 0.2s
    &.closing1
      transform translateX(-30rem) rotate(15deg)
    &.closing2
      transform translateX(-30rem) rotate(-15deg)

    .label
      background-color light2a
      background linaer-gradient(top, light2a, light2b)
      font-size 1.2em
      border-bottom 2px solid lightborder1
      .controls
        float right
        padding 5px 5px 5px 0
        .restore
          display none
        .bbutton
          float right
          cursor pointer
          padding 2px
          color black1
          font-size 1em
          &:hover
            buttonhover()
      .name
        color black1
        padding 5px 0 0 10px
      .phone
        color rgba(black1, 0.7)
        font-size 0.7em
        padding 0 0 5px 10px
    .body
      border-bottom 1px solid white3
      overflow hidden
      overflow-y auto
      height 300px
      position relative
      .none
        text-align center
        font-size 0.8em
        color black2
        font-style italic
        padding 5px
      &.loading
          background-color white3
      .message
        padding 2px
        background-color white1
        min-height 40px
        border-top 1px solid white2
        border-bottom 1px solid white3
        .picture
          background-color white3
          width s = 40px
          height s
          font-size 2em
          img
            width s
            height s
        .date
          white-space nowrap
          padding 5px 0 0 0
          color black4
          font-size 0.8em
          abbr[title]
            border-bottom-width 0
        &.from
          text-align right
          .picture
            float right
            margin 0 0 0 5px
          .triangle
            position absolute
            width 0px
            height 0px
            border-style solid
            border-width 10px 0 0 10px
            border-color transparent transparent transparent white1
            top 32px
          .copy, .date
            margin 0 40px 0 0
        &.to
          text-align left
          .picture
            float left
            margin 0 5px 0 0
          .triangle
            position absolute
            width 0px
            height 0px
            border-style solid
            border-width 0 0 10px 10px
            border-color transparent transparent white1 transparent
            top 32px
            left 32px

          .copy, .date
            margin 0 0 0 40px
        &.fromLeft
          animation fromLeft .5s 0s ease both
          transform-origin bottom left
        &.fromRight
          animation fromRight .5s 0s ease both
          transform-origin bottom right
        &.fromBottomLeft
          animation fromBottomLeft .5s 0s ease both
          transform-origin top right
        &.fromBottomRight
          animation fromBottomRight .5s 0s ease both
          transform-origin top left
    .bottom
      background-color white1
      .input
        input
          font-family inherit
          font-size inherit
          resize none
          width 200px
          padding 5px 0 5px 5px
          margin 5px 0 5px 5px
          border 1px solid white1
          outline none
          color black1
          &:disabled
            background-color inherit
          &::-webkit-input-placeholder
            color black4
          &::-moz-placeholder
            color black4
          &:focus
            box-shadow 0 0 1px 0px rgba(orange2, 1)
            transition box-shadow 0.2s
      .enter
        float right
        cursor pointer
        background-image url('/img/send.png')
        background-size 100%
        margin 7px 3px 0 0
        width 28px
        height 28px

@keyframes fromLeft
  from 
    transform translateY(-15rem) rotate(15deg)
    opacity 0 

@keyframes fromRight
  from
    transform translateY(-15rem) rotate(-15deg)
    opacity 0 

@keyframes fromBottomLeft
  from
    transform translateX(-20rem)
    opacity 0 

@keyframes fromBottomRight
  from
    transform translateX(20rem)
    opacity 0 
