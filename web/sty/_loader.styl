
@css {

  @-webkit-keyframes pound  {
    to {
      box-shadow: 1px 2px 3px 0 rgba(0, 0, 0, 0.65), 2px 6px 12px 0 rgba(0, 0, 0, 0.5), 3px 8px 15px 0 rgba(0, 0, 0, 0.45);
      transform: scale(1.2);
      -webkit-transform: scale(1.2);
    }

  }
  @keyframes pound  {
    to {
      box-shadow: 1px 2px 3px 0 rgba(0, 0, 0, 0.65), 2px 6px 12px 0 rgba(0, 0, 0, 0.5), 3px 8px 15px 0 rgba(0, 0, 0, 0.45);
      transform: scale(1.2);
      -webkit-transform: scale(1.2);
    }

  }


}

.loader
  overflow hidden
  position absolute
  top 50%
  left 50%
  padding 2em 1em
  margin-top -4em
  margin-left -3em
  ul
    display block
    width 4em
    padding 0
    box-shadow 1px 1px 1px 0 rgba(0, 0, 0, 0.0), 1px 1px 1px 0 rgba(0, 0, 0, 0.0), 1px 1px 1px 0 rgba(0, 0, 0, 0.0)

  li
    list-style none
    display block
    float left
    width 0.5em
    height 2em
    margin 0 0.3em 0 0

    background #635863
    background linear-gradient(top, blue2, blue1)

    animation pound .7s ease-in-out infinite alternate

    animation-delay 0.05s
    transform-origin center
    &:nth-child(2)
      animation-delay 0.20s
    &:nth-child(3)
      animation-delay 0.35s
    &:nth-child(4)
      animation-delay 0.50s
    &:nth-child(5)
      animation-delay 0.65s

