.tloader
  width 20px
  height 1em
  position relative
  margin 0 0 0 10px
  .dot
    width 3px
    height 3px
    position absolute
    border-radius 50%
    animation tdot 0.5s alternate infinite
  .two
    animation-delay 200ms
    left 5px
  .three
    animation-delay 450ms
    left 10px
    

@keyframes tdot
  0%
    transform translateY(0rem)
    background-color dark1
  100%
    transform translateY(5px)
    background-color dark3
    
