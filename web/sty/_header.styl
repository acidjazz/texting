.header
  padding 0px 20px
  background-color dark2
  background linear-gradient(top, dark1, dark2)
  color dark3
  > .title
    float left
    font-size 2.5em
    font-weight bold
    padding 5px 0
    color white1
    > span
      color green1
  > .logo
    background url('/img/logo_40.png')
    width 40px
    height 40px
    float left
    margin 4px 10px 0 0px
    box-shadow 0px 0px 2px 0px rgba(dark1, 1)

  .login
    float right
    color white1
    font-size 1.2em
    border 1px solid dark3
    border-radius 3px
    margin 10px 0 0 0
    background-color dark5
    a
      display block
      color white1
      padding 5px
      text-decoration none
    &:hover, a:hover
      buttonhover()

  .tools
    z-index 1
    border 1px solid dark3
    border-radius 3px
    background-color dark5
    margin 5px 0 0 -10px
    padding 0 10px
    float right
  .hbutton
    cursor pointer
    font-size 1.2em
    float left
    a
      display block
      padding 5px 0
      color white1
      text-decoration none
    &:hover, a:hover
      buttonhover()
  > .profile 
    padding 7px 0 0 0
  > .profile .left
    z-index 2
    float right
    transition all 0.5s
    > .name
      float left
      margin 5px -5px 0 0
      font-size 1.3em
      padding 7px
    > .picture
      float right
      width 40px
      height 40px
      overflow hidden
      border 2px solid white1
      border-radius 50%
      img
        width inherit
        height inherit
  .showimport .reimport a
    buttonhover()


