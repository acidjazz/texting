.header
  padding 5px 20px
  background-color blue1
  border-bottom 2px solid blue4
  color white1
  > .title
    float left
    font-size 2.5em
    font-weight bold
  > .logo
    background url('/img/logo_40.png')
    width 40px
    height 40px
    float left
    margin 3px 10px 0 0px
    box-shadow 0px 0px 2px 0px rgba(dark1, 1)

  > .login
    float right
    color white1
    margin 5px 0 0 0

  .tools
    z-index 1
    border 2px solid blue3
    border-radius 5px
    background-color blue2
    margin 5px 0 0 -10px
    padding 0 10px
    float right
  .hbutton
    cursor pointer
    font-size 1.2em
    float left
    a
      display block
      padding 5px 0
      color white1
      text-decoration none
    &:hover, a:hover
      buttonhover()
  > .profile .left
    z-index 2
    float right
    transition all 0.5s
    margin 0 -65px 0 0
    > .name
      float left
      margin 5px -5px 0 0
      font-size 1.3em
      padding 7px
      background-color blue1
    > .picture
      float right
      width 40px
      height 40px
      overflow hidden
      border 2px solid white1
      border-radius 50%
      img
        width inherit
        height inherit
    &.loading
      margin 0
  .profile:hover .left
    margin 0
