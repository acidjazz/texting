.header
  padding 5px 20px
  background-color blue1
  border-bottom 2px solid blue4
  color white1
  .title
    float left
    font-size 2.5em
    font-weight bold
  .logo
    background url('/img/logo.png')
    background-size 100%
    width 30px
    height 29px
    float left
    margin 10px 0 0 10px

  .login
    float right
    color white1
    margin 5px 0 0 0
  .hbutton
    cursor pointer
    border 2px solid blue3
    border-radius 5px
    background-color blue2
    padding 5px 12px
    a
      color white1
      text-decoration none
  .profile
    float right
    .name
      float left
      margin 10px 0 0 0
      font-size 1.3em
      padding 0 5px
    .picture
      float right
      width 40px
      height 40px
      overflow hidden
      border 2px solid white1
      border-radius 50%
      img
        width inherit
        height inherit
    .tools
      float right
      margin 0 0 0 -10px
      .logout
        text-align center
        margin 6px 0 0 0
