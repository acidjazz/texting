.header
  padding 5px 20px
  background-color blue1
  border-bottom 2px solid blue4
  color white1
  > .title
    float left
    font-size 2.5em
    font-weight bold
  > .logo
    background url('/img/logo.png')
    background-size 100%
    width 30px
    height 29px
    float left
    margin 10px 0 0 10px

  > .login
    float right
    color white1
    margin 5px 0 0 0

  .tools
    z-index 1
    border 2px solid blue3
    border-radius 5px
    background-color blue2
    margin 5px 0 0 -20px
    float right
    padding 0 5px 0 15px
  .hbutton
    cursor pointer
    padding 5px
    font-size 1.2em
    float left
    a
      color white1
      text-decoration none
    &:hover, a:hover
      buttonhover()
  > .profile .left
    z-index 2
    float right
    transition all 0.5s
    margin 0 -75px 0 0
    > .name
      float left
      margin 5px -5px 0 0
      font-size 1.3em
      padding 7px
      background-color blue1
    > .picture
      float right
      width 40px
      height 40px
      overflow hidden
      border 2px solid white1
      border-radius 50%
      img
        width inherit
        height inherit
    &.loading
      margin 0
  .profile:hover .left
    margin 0
